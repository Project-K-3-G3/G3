
@model CarInsuranceManage.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<!-- Login Section -->
<section class="login-section style-two">
    <div class="auto-container">
        <div class="login-box">
            <div class="section-icons-outer parallax-scene-2">
                <div data-depth="0.20" class="icon-layer-one" style="background-image: url(images/icons/icon-1.png)">
                </div>
                <div data-depth="0.40" class="icon-layer-two"
                     style="background-image: url(images/background/pattern-4.png)"></div>
            </div>
            <!-- Sec Title -->
            <div class="title-box">
                <h2>Sign Up</h2>
                <div class="text">
                    Lorem Ipsum is simply dummy text of the printing and
                    typesetting industry. Lorem Ipsum
                </div>
            </div>

            <!-- Form Box -->
            <div class="form-box">
                <!-- Login Form -->
                <div class="styled-form">
                    <form asp-action = "Register" method="post">
                        <div class="form-group">
                            <label asp-for="@Model.email"></label>
                            <span  class="icon flaticon-envelope"></span>
                            <input asp-for="@Model.email" type="text" name="username" value="" placeholder="Email" required />
                            
                        </div>
                        <span asp-validation-for="@Model.email" class="text-danger"></span>
                        <div class="form-group">
                            <label asp-for="@Model.password"></label>
                            <span  class="icon flaticon-padlock-1"></span>
                            <input asp-for="@Model.password" type="password" name="password" value="" placeholder="Password" required />                           
                            <span class="eye-icon flaticon-eye"></span>
                        </div>
                        <span asp-validation-for="@Model.password" class="text-danger"></span>
                        @* <div class="form-group">
                            <label asp-for="ConfirmPassword">Re-enter your password</label>
                            <span asp-validation-for="ConfirmPassword" class="icon flaticon-padlock-1"></span>
                            <input asp-for="ConfirmPassword" type="password" name="password" value="" placeholder="Password" required />
                            <span class="eye-icon flaticon-eye"></span>
                        </div> *@
                        <div class="form-group">
                            <div class="check-box">
                                <input type="checkbox" name="remember-password" id="type-1" />
                                <label for="type-1">
                                    Agree with our company
                                    <a href="privacy.html">Policy Privacy</a> and <br />
                                    <a href="terms.html">Term condition</a>
                                </label>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="theme-btn btn-style-one">
                                <span class="txt">sign up</span>
                            </button>
                        </div>
                        <div class="form-group">
                            <div class="users">
                                already have account? <a href="login.html">login in</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Login Section -->